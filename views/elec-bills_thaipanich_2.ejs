    <body>
        <%- include('navbar') %>


        <!--กลับหน้าหลัก-->
        <div class="container ">
            <img src="img/index-pic3.png"   class="img size-pic3">
            <a href="/"><p> | หน้าแรก</p></a>
        </div>
        <!--ข้อมูลการชำระ-->   
